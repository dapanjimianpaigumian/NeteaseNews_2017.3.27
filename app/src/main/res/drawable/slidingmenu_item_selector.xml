<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 当按钮 正处于按下状态时 -->
    <item android:state_pressed="true">
        <layer-list>
            <!--给View的上 左  右设置的边框-->
            <item>
                <shape>
                    <!-- View填充颜色 -->
                    <solid android:color="#ffffff" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- 当按钮未处于按下状态时 -->
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <!-- View填充颜色 -->
                   <!-- <solid android:color="#ffffff" />-->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>