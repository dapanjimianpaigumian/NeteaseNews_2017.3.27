<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/third_party_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/main_top_color">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:background="@drawable/action_button_back_pressed_light" />

        <TextView
            android:id="@+id/top_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/user_login"
            android:textColor="#ffffff"
            android:textSize="20sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <EditText
            android:id="@+id/emailadress_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:ems="12"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:text="" />

        <TextView
            android:id="@+id/emailadress_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/emailadress_edit"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/emailadress_edit"
            android:text="邮箱" />

        <EditText
            android:id="@+id/password_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/emailadress_edit"
            android:layout_below="@+id/emailadress_edit"
            android:layout_marginTop="31dp"
            android:ems="12"
            android:gravity="center"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/password_edit"
            android:layout_alignRight="@+id/emailadress_tv"
            android:layout_marginBottom="10dp"
            android:text="密码" />
    </RelativeLayout>

    <TextView
        android:id="@+id/forgetpassword_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/login_button"
        android:layout_below="@+id/edit_layout"
        android:layout_marginRight="11dp"
        android:layout_marginTop="9dp"
        android:text="忘记密码？" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_below="@+id/edit_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="#74b847"
        android:text="登录" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="328dp"
        android:layout_height="40dp"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#74b847"
        android:text="注册" />

    <TextView
        android:id="@+id/third_party_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="使用第三方账号登录" />

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="120dp"
        android:layout_below="@+id/third_party_login_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:weightSum="3"
        android:orientation="horizontal">


        <TextView
            android:text="QQ登录"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/qq_login"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/biz_news_share_qq"
            android:layout_weight="1" />

        <TextView
            android:text="微信登录"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/wechat_login"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/biz_news_share_wx"
            android:layout_weight="1" />

        <TextView
            android:text="微博登录"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/sina_login"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/biz_news_share_sina"
            android:layout_weight="1" />

    </LinearLayout>


    <!-- <TextView
         android:text="忘记密码？"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         android:layout_marginRight="9dp"
         android:layout_marginTop="16dp"
         android:id="@+id/forgetpassword_tv" />-->

</RelativeLayout>