<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">
    <RelativeLayout
        android:id="@+id/news_item_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/News_icon"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/News_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/News_icon"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:maxLines="1"
            android:layout_toEndOf="@+id/News_icon"
            android:layout_toRightOf="@+id/News_icon"
            android:maxLength="100"
            android:textColor="#000000"
            android:text="标题" />

        <TextView
            android:id="@+id/News_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textSize="10sp"
            android:textColor="#000000"
            android:text="时间"
            android:layout_below="@+id/News_title" />

        <TextView
            android:id="@+id/News_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/News_title"
            android:layout_alignStart="@+id/News_title"
            android:maxLines="1"
            android:layout_alignBottom="@+id/News_icon"
            android:text="内容"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>

</RelativeLayout>