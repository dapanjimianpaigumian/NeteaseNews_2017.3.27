<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <RelativeLayout
        android:id="@+id/collection_item_layout"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/collection_icon"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/collection_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/collection_icon"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/collection_icon"
            android:maxLength="100"
            android:maxLines="1"
            android:text="标题"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/collection_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/collection_title"
            android:layout_marginRight="10dp"
            android:text="时间"
            android:textColor="#000000"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/collection_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/collection_icon"
            android:layout_alignLeft="@+id/collection_title"
            android:layout_alignStart="@+id/collection_title"
            android:maxLines="1"
            android:text="内容"
            android:textColor="#000000"
            android:textSize="10sp" />
    </RelativeLayout>
</RelativeLayout>