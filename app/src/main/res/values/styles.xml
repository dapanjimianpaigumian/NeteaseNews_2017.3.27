<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 圆形ImageView -->
    <declare-styleable name="RoundImageView">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color" />
    </declare-styleable>

    <!--slidinglayout_ID字体样式-->
    <style name="VariableName">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--slidinglayout_level字体样式-->
    <style name="VariableLevel">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold|italic</item>

    </style>
    <!--夜间模式、设置、退出的字体样式-->
    <style name="VariableBottom">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--解决启动时的白色屏幕问题-->
    <style name="AppBlackTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="Popupwindow_Theme">
        <item name="android:popupEnterTransition">@anim/popupwindow_visible</item>
        <item name="android:popupExitTransition">@anim/popupwindow_invisible</item>
    </style>
</resources>
